<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="lv.itlat.karina.DataEntryForm">

    <center>
        <GridPane vgap="8" hgap="8">
            <Label text="Enter your name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Mobile phone" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Email" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label fx:id="idLabel" text="" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        </GridPane>

    </center>
    <bottom>

        <HBox spacing="10" alignment="BASELINE_RIGHT">
            <Button text="Ladno" onAction="#okPressed"/>
            <Button text="Net uz" onAction="#cancelPressed"/>
        </HBox>
    </bottom>

</fx:root>
